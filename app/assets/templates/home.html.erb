<div class="container" class="color-palette red">    
    <div class="row right" ng-if="currentUser">
        <!-- Dropdown Trigger -->
        <a class='dropdown-button waves-effect waves-light btn' data-activates='demoDropdown' dropdown data-hover="false" data-beloworigin="true">
            {{currentUser}}
        </a>
        
        <!-- Dropdown Structure -->
        <ul id='demoDropdown' class='dropdown-content'>
            <li><a ng-click="profile()" class='waves-effect waves-light'>Profile</a></li>
            <li><a ng-click="logout()" class='waves-effect waves-light'>Log Out</a></li>
        </ul>
    </div>
    <div class="row right" ng-if="!currentUser">
        <a class='waves-effect waves-light btn' href='#loginModal' modal open="false" enable-tabs="true">Login</a>
    </div>
  <div class="section no-pad-bot" id="index-banner">
    
      <br><br>
      <h1 class="header center">Social Count</h1>
      <div class="row center">
        <h5 class="header col s12 light">{{slogan}}</h5>
      </div>
      <div class="row center" ng-if="!currentUser">
            <a class='waves-effect waves-light btn-large' href='#loginModal' modal open="false" enable-tabs="true">Get Started</a>
      </div>
      <div class="row center" ng-if="currentUser">
            <a class='waves-effect waves-light btn-large' ng-click="profile()" >Get Started</a>
      </div>
      <br><br>

    
  </div>

</div>

<div class="container">
  <div ng-include="'signup.html'"></div>
</div>
